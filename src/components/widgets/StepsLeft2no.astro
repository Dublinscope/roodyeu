---
import { Icon } from "astro-icon";
import Picture from "~/components/core/Picture.astro";

const {} = Astro.props;
---

<section class="px-4 py-16 sm:px-6 mx-auto lg:px-8 lg:py-20 max-w-6xl">
  <div class="grid gap-6 row-gap-10 md:grid-cols-2">
    <div class="md:py-6 md:pr-16 text-gray-700 dark:text-gray-400">
      <div class="flex">
        <div class="mb-12 lg:mb-0 pb-12 lg:pb-0 border-b lg:border-b-0">
          <h2 class="mb-4 text-3xl lg:text-4xl font-bold font-heading">
            Priser - Minimumsbestilling kun 100 enheter.
          </h2>

          <ul class="leading-9 list-disc list-inside mb-8 text-xl text-gray-600 dark:text-slate-400">
            <li class="pb-2">
              <span class="font-bold">100 - 249</span> enheter: <span class="font-bold">39,95€</span> hver.
            </li>

            <li class="pb-2">
              <span class="font-bold">250 - 499</span> enheter: <span class="font-bold">34,95€</span> hver.
            </li>

            <li class="pb-2">
              <span class="font-bold">500 - 999</span> enheter: <span class="font-bold">31,95€</span> hver.
            </li>
            <li>
              <span class="font-bold">1.000+</span> enheter: <span class="font-bold">29,95€</span> hver.
            </li>
          </ul>

          <div class="w-full">
            <a
              class="btn text-white bg-green-800 hover:bg-green-600 mb-4 sm:mb-0 font-bold"
              href="/kontakt"
              >Begynn å lage
            </a>
          </div>
        </div>
      </div>
    </div>
    <div class="relative">
      <Picture
        class="inset-0 object-cover object-top w-full rounded-md shadow-lg md:absolute md:h-full bg-gray-400 dark:bg-slate-700"
        src={import("~/assets/images/ironman80.jpg")}
        widths={[400, 768]}
        sizes="(max-width: 768px) 759px, 873px"
        alt="Astronaut"
        aspectRatio="759:873"
      />
    </div>
  </div>
</section>
